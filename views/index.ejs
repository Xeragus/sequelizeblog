<div style="width: 600px; margin: 0 auto;" class="mt-5">
  <%- include('./partials/notifications') %>
  <div class="row justify-content-between mb-5">
    <div class="col-sm-3">
      <h3><%= posts.length ? 'Posts' : 'No posts' %></h3>
    </div>
    <div class="col-sm-3 text-right">
      <a type="button" class="btn btn-sm btn-primary" href="/posts/create">
        Add
        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-plus-circle-fill" viewBox="0 0 16 16">
          <path fill-rule="evenodd" d="M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0zM8.5 4.5a.5.5 0 0 0-1 0v3h-3a.5.5 0 0 0 0 1h3v3a.5.5 0 0 0 1 0v-3h3a.5.5 0 0 0 0-1h-3v-3z"/>
        </svg>
      </a>
    </div>
  </div>
  <% posts.forEach(post => { %>
    <div class="card mb-5">
      <div class="card-body">
        <div class="row justify-content-between">
          <div class="col-sm-9">
            <h5 class="card-title"><%= post.title %></h5>
          </div>
          <div class="col-sm-3 text-right">
            <a href="/categories/<%= post.category_id %>" class="card-link">#<%= post.category.name %></a>
          </div>
        </div>
        <p class="card-text"><%= post.content %></p>
      </div>
    </div>
  <% }) %>
</div>